<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "/cocktails", class: "navbar-brand" do %>
    <%= image_tag "https://png.pngtree.com/png-clipart/20190705/original/pngtree-cocktail-icon-design-png-image_4316053.jpg" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "Home", cocktails_path, class: "nav-link" %>
      </li>
    </ul>
  </div>
</div>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= image_path 'banner_cocktails.png' %>')">
  <div class="container">
    <h1>Les Potions de Kameko</h1>
  </div>
</div>

<div class="container padded">

  <h1 class="text-center">Add a Dose</h1>

  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">

<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description %>
  <%= f.association :ingredient %>
  <%= f.submit "Create a dose", class: "btn btn-primary" %>
<% end %>

        <div class="pad20">
          <%= link_to "Go back", cocktails_path, class: "btn btn-warning btn-sm" %>
        </div>
    </div>
  </div>
</div>